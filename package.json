{
  "name": "@zdavison/claude-was-here",
  "version": "0.0.2",
  "description": "Track lines changed by Claude Code using git hooks and git notes",
  "main": "dist/cli.js",
  "bin": {
    "claude-was-here": "dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target bun --format esm",
    "build:binary": "bun run build && bun build src/cli.ts --compile --outfile claude-was-here",
    "dev": "bun run src/cli.ts",
    "init": "bun run src/cli.ts init",
    "type-check": "tsc --noEmit",
    "test": "bun test tests/",
    "test:watch": "bun test tests/ --watch",
    "prepublishOnly": "bun run build && bun run type-check && bun run test"
  },
  "keywords": ["claude", "git", "hooks", "tracking", "ai"],
  "author": "",
  "license": "MIT",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zdavison/claude-was-here.git"
  },
  "homepage": "https://github.com/zdavison/claude-was-here#readme",
  "bugs": {
    "url": "https://github.com/zdavison/claude-was-here/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0"
  }
}